<Window x:Class="SimpleSFTPDragAndDrop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimpleSFTPDragAndDrop"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Name="ImagePanel" Drop="ImagePanel_OnDrop" AllowDrop="true" Width="1000" Height="1000" Background="Transparent" >
            <ListBox ItemsSource="{Binding Files}"></ListBox>
        </StackPanel>
    </Grid>
</Window>
